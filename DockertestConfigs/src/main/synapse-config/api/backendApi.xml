<?xml version="1.0" encoding="UTF-8"?>
<api context="/main" name="backendApi" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <call>
                <endpoint>
                    <http method="get" statistics="enable" trace="enable" uri-template="http://universities.hipolabs.com/search?country=United+States">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <property name="Hospital" scope="default" type="STRING" value="Jagdish Hospital"/>
            <log>
                <property name="End Logger " value="Data recieve from backend api"/>
                <property expression="fn:concat('Invalid hospital - ', get-property('Hospital'))" name="Functioncheck"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>

<?xml version="1.0" encoding="UTF-8"?>
<api context="/csv" name="IngestionCsv" xmlns="http://ws.apache.org/ns/synapse">
    <resource faultSequence="ErrorSequence" methods="POST">
        <inSequence>
            <log level="full"/>
            <property expression="$trp:Content-Type" name="content" scope="default" type="STRING"/>
            <switch source="get-property('content')">
                <case regex="text/csv">
                    <property name="source" scope="default" type="STRING" value="dbpedia-contact"/>
                    <CSV.csvToJson>
                        <headerPresent>Present</headerPresent>
                        <valueSeparator>,</valueSeparator>
                        <skipHeader>true</skipHeader>
                        <csvEmptyValues>Empty</csvEmptyValues>
                    </CSV.csvToJson>
                    <class name="com.example.DBPediaMapper"/>
                    <payloadFactory media-type="json">
                        <format>$1</format>
                        <args>
                            <arg evaluator="json" expression="$ctx:Array2"/>
                        </args>
                    </payloadFactory>
                    <call>
                        <endpoint>
                            <http method="post" uri-template="http://localhost:8080/generate/ttl?entityType=OrganisationMapping">
                                <suspendOnFailure>
                                    <initialDuration>-1</initialDuration>
                                    <progressionFactor>-1</progressionFactor>
                                    <maximumDuration>0</maximumDuration>
                                </suspendOnFailure>
                                <markForSuspension>
                                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                                </markForSuspension>
                            </http>
                        </endpoint>
                    </call>
                    <log level="full">
                        <property name="TTL Conversion Status" value="True"/>
                    </log>
                    <call>
                        <endpoint>
                            <http method="post" uri-template="http://localhost:8081/insertDataIntoGraph">
                                <suspendOnFailure>
                                    <initialDuration>-1</initialDuration>
                                    <progressionFactor>-1</progressionFactor>
                                    <maximumDuration>0</maximumDuration>
                                </suspendOnFailure>
                                <markForSuspension>
                                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                                </markForSuspension>
                            </http>
                        </endpoint>
                    </call>
                </case>
                <case regex="application/json">
                    <log level="full">
                        <property name="log1" value="json api started"/>
                    </log>
                    <class name="com.example.SplittingClass"/>
                    <log>
                        <property expression="json-eval($ctx:Array1)" name="Array1"/>
                    </log>
                    <sequence key="InsertionSequence"/>
                    <sequence key="InsertionParentSequence"/>
                    <sequence key="RedisSync"/>
                </case>
                <default/>
            </switch>
            <log>
                <property name="End Log" value="IngestionCsv api completed"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
    </resource>
</api>

<?xml version="1.0" encoding="UTF-8"?>
<api context="/jsonIntegration" name="JsonIntegration" xmlns="http://ws.apache.org/ns/synapse">
    <resource faultSequence="ErrorSequence" methods="POST">
        <inSequence>
            <log level="full"/>
            <property expression="$trp:Content-Type" name="content" scope="default" type="STRING"/>
            <switch source="get-property('content')">
                <case regex="application/json">
                    <log level="full">
                        <property name="log1" value="json api started"/>
                    </log>
                    <class name="com.example.SplittingClass"/>
                    <log>
                        <property expression="json-eval($ctx:Array1)" name="Array1"/>
                    </log>
                    <sequence key="InsertionSequence"/>
                    <property expression="$body" name="InsertionSequence" scope="default" type="STRING"/>
                    <sequence key="InsertionParentSequence"/>
                    <property expression="$body" name="InsertionParentSequence" scope="default" type="STRING"/>
                    <sequence key="InsertDataOnParent"/>
                    <property expression="$ctx:insertParentDataObject" name="InsertParentData" scope="default" type="STRING"/>
                    <sequence key="RedisSync"/>
                    <property expression="$ctx:SyncRedisObject" name="RedisSync" scope="default" type="STRING"/>
                    <payloadFactory media-type="json">
                        <format>{&#xd;
"InsertionSequencePayload":"$1",&#xd;
"InsertionParentSequence":"$2",&#xd;
"InsertParentData":"$3"&#xd;
"RedisSync":"$4"&#xd;
&#xd;
}</format>
                        <args>
                            <arg evaluator="xml" expression="get-property('InsertionSequence')"/>
                            <arg evaluator="xml" expression="get-property('InsertionParentSequence')"/>
                            <arg evaluator="xml" expression="get-property('InsertParentData')"/>
                            <arg evaluator="xml" expression="get-property('RedisSync')"/>
                        </args>
                    </payloadFactory>
                </case>
                <default>
                    <log>
                        <property name="JsonInjestionLog" value="No Json Data found in the payload"/>
                    </log>
                    <payloadFactory media-type="text">
                        <format>No Json Data found in the payload</format>
                        <args/>
                    </payloadFactory>
                </default>
            </switch>
            <log/>
            <respond/>
        </inSequence>
        <outSequence/>
    </resource>
</api>

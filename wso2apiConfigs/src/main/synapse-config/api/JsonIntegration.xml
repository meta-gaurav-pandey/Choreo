<?xml version="1.0" encoding="UTF-8"?>
<api context="/jsonIntegration" name="JsonIntegration" xmlns="http://ws.apache.org/ns/synapse">
    <resource faultSequence="ErrorSequence" methods="POST">
        <inSequence>
            <log level="full"/>
            <property expression="$trp:Content-Type" name="content" scope="default" type="STRING"/>
            <switch source="get-property('content')">
                <case regex="application/json">
                    <log level="full">
                        <property name="log1" value="json api started"/>
                    </log>
                    <class name="com.example.SplittingClass"/>
                    <log>
                        <property expression="json-eval($ctx:Array1)" name="Array1"/>
                    </log>
                    <sequence key="InsertionSequence"/>
                    <sequence key="InsertionParentSequence"/>
                    <sequence key="RedisSync"/>
                </case>
                <default>
                    <log>
                        <property name="JsonInjestionLog" value="No Json Data found in the payload"/>
                    </log>
                    <payloadFactory media-type="text">
                        <format>No Json Data found in the payload</format>
                        <args/>
                    </payloadFactory>
                </default>
            </switch>
            <log/>
            <respond/>
        </inSequence>
        <outSequence/>
    </resource>
</api>

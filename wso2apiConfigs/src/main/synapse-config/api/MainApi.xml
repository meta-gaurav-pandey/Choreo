<?xml version="1.0" encoding="UTF-8"?>
<api context="/calling" name="MainApi" statistics="enable" trace="enable" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <log>
                <property name="Starting Logger" value="Api Started"/>
            </log>
            <call>
                <endpoint>
                    <http method="get" uri-template="http://filterlists.com/api/directory/lists">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <log>
                <property name="End Log " value="Api End"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>

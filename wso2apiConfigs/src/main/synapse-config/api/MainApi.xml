<?xml version="1.0" encoding="UTF-8"?>
<api context="/calling" name="MainApi" statistics="enable" trace="enable" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/Salesforce/{source}">
        <inSequence>
            <log>
                <property name="StartLog" value="Api started"/>
            </log>
            <property expression="get-property('uri.var.source')" name="source" scope="default" type="STRING"/>
            <dataServiceCall serviceName="RDBMSdataService">
                <operations type="single">
                    <operation name="GetAllData">
                        <param evaluator="xml" expression="get-property('source')" name="sourceName"/>
                    </operation>
                </operations>
                <source type="inline"/>
                <target type="body"/>
            </dataServiceCall>
            <property name="messageType" scope="axis2" type="STRING" value="application/xml"/>
            <property name="sObjectType" scope="default" type="STRING" value="ApiData"/>
            <sequence key="ClassSequence"/>
            <payloadFactory media-type="json">
                <format>$1</format>
                <args>
                    <arg evaluator="json" expression="$ctx:Array"/>
                </args>
            </payloadFactory>
            <call>
                <endpoint>
                    <http method="post" statistics="enable" uri-template="http://52.91.255.31:8080/ttl/generate/ttl?entityType=OrganisationMapping">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <log level="full"/>
            <call>
                <endpoint>
                    <http method="post" uri-template="http://52.91.255.31:8080/insertion/insertDataIntoGraph">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <log level="full">
                <property name="EndLog" value="Api end log"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>

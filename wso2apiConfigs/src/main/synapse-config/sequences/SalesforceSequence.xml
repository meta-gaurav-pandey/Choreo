<?xml version="1.0" encoding="UTF-8"?>
<sequence name="SalesforceSequence" onError="ErrorSequence" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log>
        <property name="SalesforceSequence" value="Started"/>
    </log>
    <property name="sObjectType" scope="default" type="STRING" value="Lead"/>
    <property expression="json-eval($.sobject.Id)" name="Id" scope="default" type="STRING"/>
    <salesforcerest.query configKey="SALESFORCEREST_CONNECTION_1">
        <queryString>{fn:concat('select Id,Name,Company, Country,description from Lead where Id=',"'", $ctx:Id,"'" )}</queryString>
    </salesforcerest.query>
    <property name="ContentType" scope="axis2" type="STRING" value="application/json"/>
    <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
    <log level="full">
        <property name="CallingClassSequence" value="After querying calling class sequence"/>
    </log>
    <sequence key="ClassSequence"/>
    <log>
        <property name="AfterClass" value="Class sequence end "/>
        <property expression="json-eval($ctx:Array)" name="Array"/>
    </log>
    <payloadFactory media-type="json">
        <format>$1</format>
        <args>
            <arg evaluator="json" expression="$ctx:Array"/>
        </args>
    </payloadFactory>
    <log>
        <property expression="$body" name="log2"/>
    </log>
    <call>
        <endpoint>
            <http method="post" uri-template="http://52.91.255.31:8080/ttl/generate/ttl?entityType=OrganisationMapping">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>-1</progressionFactor>
                    <maximumDuration>0</maximumDuration>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </http>
        </endpoint>
    </call>
    <log level="full"/>
    <call>
        <endpoint>
            <http method="post" uri-template="http://52.91.255.31:8080/insertion/insertDataIntoGraph">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>-1</progressionFactor>
                    <maximumDuration>0</maximumDuration>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </http>
        </endpoint>
    </call>
    <!--    <send>
                <endpoint>
                    <http method="post" uri-template="http://localhost:7200/repositories/Graph_Java_Testing/rdf-graphs/service?graph=http://test.com/graphs/Zenia#person">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                   
                </endpoint>
            </send> -->
    <log separator=",">
        <property name="EndSequence" value="Salesforce Sequence end "/>
    </log>
</sequence>

<?xml version="1.0" encoding="UTF-8"?>
<api context="/azure" name="AzureApi" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <msazurestorage.init>
                <accountName>databricksaqi</accountName>
                <accountKey>SboycvfUPW4wJaTDY8SnA6/ylwO1uptrBSystnsrdeiprCjPc7FoIVoVlawyk+0Mmte6S/gadI8M+ASta0ovYg==</accountKey>
            </msazurestorage.init>
            <msazurestorage.listBlobs>
                <containerName>wso2container</containerName>
            </msazurestorage.listBlobs>
            <msazurestorage.downloadBlob>
                <containerName>wso2container</containerName>
                <fileName>LinkedInData.csv</fileName>
            </msazurestorage.downloadBlob>
            <file.checkExist configKey="FILE_CONNECTION_1">
                <path>${WSO2_SERVER_HOME}/LinkedInData.csv</path>

            <property expression="json-eval($.checkExistResult.fileExists)" name="response" scope="default" type="STRING"/>
            <switch source="get-property('response')">
                <case regex="true">
                    <log>
                        <property name="FileExist" value="The desired file exist"/>
                    </log>
                    <file.read configKey="FILE_CONNECTION_1">
                        <path>${WSO2_SERVER_HOME}/LinkedInData.csv</path>
                        <readMode>Complete File</readMode>
                        <startLineNum>0</startLineNum>
                        <lineNum>0</lineNum>
                        <contentType>text/plain</contentType>
                        <includeResultTo>Message Body</includeResultTo>
                        <enableStreaming>false</enableStreaming>
                        <enableLock>false</enableLock>
                    </file.read>
                    <log>
                        <property name="FileLog" value="FileReaded"/>
                    </log>
                    <CSV.csvToJson>
                        <headerPresent>Present</headerPresent>
                        <valueSeparator>,</valueSeparator>
                        <skipHeader>true</skipHeader>
                        <csvEmptyValues>Empty</csvEmptyValues>
                    </CSV.csvToJson>
                </case>
                <default>
                    <log level="full">
                        <property name="log2" value="No file"/>
                    </log>
                </default>
            </switch>
            <log level="full"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
